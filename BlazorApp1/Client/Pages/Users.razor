@page "/users"
@using BlazorApp1.Shared.Models

<h3>Users</h3>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Admin?</th>
            <th scope="col">Teacher?</th>
            <th scope="col">Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (SystemUser u in users)
        {
            <tr>
                <th scope="row">@u.Id</th>
                <td>@StaticUtils.BoolToStringYesNo(u.IsAdmin)</td>
                <td>@StaticUtils.BoolToStringYesNo(u.IsTeacher)</td>
                <td>@u.Name</td>
            </tr>
        }
    </tbody>
</table>
